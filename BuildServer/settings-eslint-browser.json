{
	"env": {
		"browser": true
	},
	"useEslintrc": false,
	"extends": "eslint:all",
	"rules": {
		"quotes": ["warn", "double"],
		"no-var": "off",
		"require-jsdoc": "off",
		"func-names": ["warn", "never"],
		"max-len": ["warn", { "code": 140 }],
		"operator-linebreak": ["warn", "before"],
		"padded-blocks": ["warn", "never"],
		"dot-notation": ["warn", { "allowPattern": "^[a-z]+(_[a-z]+)+$" }]
	}
}