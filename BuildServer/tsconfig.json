{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "*.ts",
        "lib/**/*.ts",
        "routes/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*.ts"
    ]
}
